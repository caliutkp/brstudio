<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="StudioViewBuilder">
        <div class="studio-view-builder">
            <div class="toolbar">
                <button class="btn btn-primary add-component">Add Component</button>
                <button class="btn btn-secondary preview-view">Preview</button>
            </div>
            <div class="components-container">
                <!-- Components will be rendered here -->
            </div>
        </div>
    </t>

    <t t-name="StudioComponent">
        <div class="studio-component" t-att-data-id="component.id">
            <div class="component-handle">
                <i class="fa fa-bars"/>
            </div>
            <div class="component-content">
                <t t-esc="component.name"/>
            </div>
            <div class="component-actions">
                <button class="btn btn-sm btn-danger remove-component">
                    <i class="fa fa-trash"/>
                </button>
            </div>
        </div>
    </t>
</templates>