<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Studio Security Groups -->
    <record id="group_studio_user" model="res.groups">
        <field name="name">Studio User</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="comment">Basic studio operations</field>
    </record>

    <record id="group_studio_manager" model="res.groups">
        <field name="name">Studio Manager</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="implied_ids" eval="[(4, ref('group_studio_user'))]"/>
        <field name="comment">Advanced studio operations</field>
    </record>

    <!-- API Security Groups -->
    <record id="group_api_user" model="res.groups">
        <field name="name">API User</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="comment">Basic API operations</field>
    </record>

    <record id="group_api_manager" model="res.groups">
        <field name="name">API Manager</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="implied_ids" eval="[(4, ref('group_api_user'))]"/>
        <field name="comment">Advanced API operations</field>
    </record>
</odoo>