<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- API Security Groups -->
    <record id="group_api_user" model="res.groups">
        <field name="name">API User</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="comment">Basic API operations</field>
    </record>

    <record id="group_api_manager" model="res.groups">
        <field name="name">API Manager</field>
        <field name="category_id" ref="base.module_category_tools"/>
        <field name="implied_ids" eval="[(4, ref('group_api_user'))]"/>
        <field name="comment">Advanced API operations</field>
    </record>

    <!-- Record Rules -->
    <record id="rule_api_connection_user" model="ir.rule">
        <field name="name">API Connection: User Access</field>
        <field name="model_id" ref="model_studio_api_connection"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_api_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>